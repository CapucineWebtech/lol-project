<% content_for :title, "Fiche utilisateur" %>

<div class="max-w-2xl mx-auto mt-10 space-y-6">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md">
      <%= notice %>
    </p>
  <% end %>

  <div class="bg-white shadow-sm rounded-lg p-6 space-y-4">
    <h1 class="text-2xl font-bold text-gray-800">Informations du compte</h1>

    <div>
      <p class="text-sm font-semibold text-gray-600">Email :</p>
      <p class="text-lg text-gray-800"><%= @user.email %></p>
    </div>

    <% if admin? %>
      <div>
        <p class="text-sm font-semibold text-gray-600">Administrateur :</p>
        <p class="text-lg text-gray-800"><%= @user.is_admin? ? "Oui" : "Non" %></p>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3">
    <div class="flex flex-col sm:flex-row gap-3 sm:items-center">
      <%= link_to "Modifier", edit_user_path(@user),
          class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500 font-medium" %>

      <%= button_to "Supprimer le compte", @user,
          method: :delete,
          class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-500 font-medium",
          data: { turbo_confirm: "Supprimer ce compte ?" } %>

      <% if admin? %>
        <%= link_to "Voir tous les utilisateurs", users_path,
            class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-md font-medium bg-gray-300" %>
      <% end %>
    </div>

    <%= button_to "Se dÃ©connecter", logout_path,
        method: :delete,
        class: "text-sm text-gray-500 hover:underline mt-2 sm:mt-0 sm:ml-auto" %>
  </div>
</div>
