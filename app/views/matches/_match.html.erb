<div id="<%= dom_id match %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Team1:</strong>
    <%= match.team1_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Team2:</strong>
    <%= match.team2_id %>
  </div>
