<div id="<%= dom_id match %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Team1:</strong>
    <%= match.team1_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Team2:</strong>
    <%= match.team2_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Match date:</strong>
    <%= match.match_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Score:</strong>
    <% if match.score_team1.present? && match.score_team2.present? %>
      <%= match.score_team1 %> - <%= match.score_team2 %>
    <% else %>
      Not played yet
    <% end %>
  </div>

  <% if match.winner %>
  <div>
    <strong class="block font-medium mb-1">Winner:</strong>
    <%= match.winner.name %>
  </div>
  <% end %>
</div>
