<header class="bg-gradient-to-r from-blue-600 to-blue-700 text-white shadow-md">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <!-- Logo/Branding -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2 text-white hover:text-white" do %>
          <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-bold text-xl tracking-tight">LoL Tournoi</span>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-white hover:text-white hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <!-- Icon when menu is closed -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <!-- Icon when menu is open -->
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Desktop menu -->
      <div class="hidden md:flex md:items-center md:space-x-6">
        <%= link_to matches_path, class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium #{current_page?(matches_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out'}" do %>
          <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          Tous les matchs
        <% end %>

        <%= link_to players_path, class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium #{current_page?(players_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out'}" do %>
          <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Tous les joueurs
        <% end %>

        <% if current_user %>
          <%= link_to user_path(current_user), class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium #{current_page?(user_path(current_user)) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out'}" do %>
            <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Mon profil
          <% end %>

          <%= button_to logout_path, method: :delete, class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out", form_class: "inline" do %>
            <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Déconnexion
          <% end %>
        <% else %>
          <%= link_to login_path, class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium #{current_page?(login_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out'}" do %>
            <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            Se connecter
          <% end %>

          <%= link_to new_user_path, class: "nav-link inline-flex items-center px-3 py-2 rounded-md text-sm font-medium #{current_page?(new_user_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white transition duration-150 ease-in-out'}" do %>
            <svg class="mr-1.5 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            S'inscrire
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state -->
  <div class="hidden md:hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1 px-2">
      <%= link_to matches_path, class: "nav-link block px-3 py-2 rounded-md text-base font-medium #{current_page?(matches_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white'}" do %>
        <div class="flex items-center">
          <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          Tous les matchs
        </div>
      <% end %>

      <%= link_to players_path, class: "nav-link block px-3 py-2 rounded-md text-base font-medium #{current_page?(players_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white'}" do %>
        <div class="flex items-center">
          <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Tous les joueurs
        </div>
      <% end %>

      <% if current_user %>
        <%= link_to user_path(current_user), class: "nav-link block px-3 py-2 rounded-md text-base font-medium #{current_page?(user_path(current_user)) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white'}" do %>
          <div class="flex items-center">
            <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            Mon profil
          </div>
        <% end %>

        <%= button_to logout_path, method: :delete, class: "nav-link w-full text-left block px-3 py-2 rounded-md text-base font-medium text-blue-50 hover:bg-blue-500 hover:text-white" do %>
          <div class="flex items-center">
            <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Déconnexion
          </div>
        <% end %>
      <% else %>
        <%= link_to login_path, class: "nav-link block px-3 py-2 rounded-md text-base font-medium #{current_page?(login_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white'}" do %>
          <div class="flex items-center">
            <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
            </svg>
            Se connecter
          </div>
        <% end %>

        <%= link_to new_user_path, class: "nav-link block px-3 py-2 rounded-md text-base font-medium #{current_page?(new_user_path) ? 'bg-blue-800 text-white' : 'text-blue-50 hover:bg-blue-500 hover:text-white'}" do %>
          <div class="flex items-center">
            <svg class="mr-3 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
            S'inscrire
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</header>

<script>
    document.addEventListener('turbo:load', function() {
        // Gestion du menu mobile
        const mobileMenuButton = document.querySelector('.mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', function() {
                // Toggle les icônes
                mobileMenuButton.querySelector('svg:first-child').classList.toggle('hidden');
                mobileMenuButton.querySelector('svg:last-child').classList.toggle('hidden');

                // Toggle le menu
                mobileMenu.classList.toggle('hidden');
            });
        }
    });
</script>